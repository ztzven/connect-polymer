{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es5", "es6", "es2017", "es2018", "dom"
        ],
        "moduleResolution": "node",
        "outDir": "dist",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "noImplicitAny": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [ "es5", "es6", "es2018", "dom" ],
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "noImplicitAny": false
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*.ts"
    ]
}